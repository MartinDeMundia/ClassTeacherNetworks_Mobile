<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyTabsAttrs">

        <!--STYLE-->

        <attr name="etab_selected_color" format="color"/>
        <attr name="etab_unselected_color" format="color"/>
        <attr name="etab_bold_for_selected" format="boolean"/>

        <!--INDICATOR-->

        <attr name="etab_indicator_color" format="color"/>
        <attr name="etab_indicator_width" format="dimension"/>
        <attr name="etab_indicator_size" format="enum">
            <enum name="text" value="0"/>
            <enum name="value" value="1"/>
            <enum name="match_parent" value="2"/>
            </attr>
        <attr name="etab_indicators" format="boolean"/>

        <!--SEP-->

        <attr name="etab_separators" format="boolean"/>
        <attr name="etab_separator_color" format="color"/>


    </declare-styleable>
</resources>