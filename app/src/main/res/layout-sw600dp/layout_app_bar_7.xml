<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/relativeAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imgAppBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_app_bar_back"
            android:tint="@color/colorWhite" />

        <TextView
            android:id="@+id/txtAppBarHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgAppBack"
            android:fontFamily="@font/quicksand_medium"
            android:text="Empty"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_8sdp" />

        <ImageView
            android:id="@+id/imgAppRemove"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgAppDownload"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_delete"
            android:tint="@color/colorWhite" />

        <ImageView
            android:id="@+id/imgAppDownload"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_save"
            android:tint="@color/colorWhite" />

    </RelativeLayout>
</RelativeLayout>
