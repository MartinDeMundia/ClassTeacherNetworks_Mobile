<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgClose"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@drawable/box_white_fill"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Please enter the code we have sent to your Email Address / Phone number"
            android:textSize="@dimen/_9sdp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtCode"
            style="@style/edt_Login_EditText"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/quicksand_medium"
            android:hint="Enter Code"
            android:inputType="number" />


        <Button
            android:id="@+id/btnContinue"
            style="@style/btn_Button_2"
            android:fontFamily="@font/quicksand_bold"
            android:text="Continue"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>