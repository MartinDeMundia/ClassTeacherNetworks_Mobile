<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearClass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/customborder"
    android:orientation="vertical"
    android:padding="2dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/folder" />

    <TextView
        android:id="@+id/txtClassName"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        android:padding="@dimen/_5sdp"
        android:text="Stream"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@+id/txtStreamName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />


    <TextView
        android:id="@+id/txtStreamName"
        android:layout_width="222dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/quicksand_medium"
        android:padding="@dimen/_5sdp"
        android:text="Class"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toTopOf="@+id/txtStudentNo"
        app:layout_constraintEnd_toEndOf="@+id/txtClassName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/txtClassName" />


    <TextView
        android:id="@+id/txtStudentNo"
        android:layout_width="222dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/quicksand_medium"
        android:padding="@dimen/_5sdp"
        android:text="No. of Students"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtClassName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/txtStreamName" />


</android.support.constraint.ConstraintLayout>